# Environment Configuration Template
# Copy this file to .env.development, .env.production, or .env.staging
# and fill in the appropriate values for your environment

# Application Environment
APP_ENV=development
APP_NAME=CSmart
APP_VERSION=1.0.0
APP_DEBUG=true

# API Configuration
API_BASE_URL=https://your-api-domain.com/api/v3.1
API_TIMEOUT=30
API_RETRY_COUNT=3
API_RETRY_DELAY=1000

# Authentication
AUTH_TOKEN_EXPIRY=3600
AUTH_REFRESH_THRESHOLD=300

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_OUTPUT=console

# Database (if needed in future)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database
DB_SSL_MODE=disable

# Security
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:5173,http://localhost:34115
RATE_LIMIT_ENABLED=false

# Development specific
HOT_RELOAD=true
DEV_TOOLS=true
MOCK_API=false

# Window Configuration
WINDOW_WIDTH=1200
WINDOW_HEIGHT=800
WINDOW_RESIZABLE=true
WINDOW_FULLSCREEN=false

# Performance (production only)
CACHE_ENABLED=false
CACHE_TTL=3600
COMPRESSION_ENABLED=false
